<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Labajo_WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Labajo_WebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-primary border-bottom box-shadow mb-3">
            <div class="container">
                    <a class="navbar-brand" asp-area="" asp-page="/Index">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-5">
                                    <img src="~/images/logo-white.png" width="400" height="100px" class="img-fluid" />
                                </div>
                            </div>
                        </div>
                    </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav justify-content-end flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white fw-bold" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white fw-bold" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        @*Products Dropdown*@
                        <li class="nav-item dropdown">
                            <a class="nav-link text-white fw-bold dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Products
                            </a>
                            <ul class="dropdown-menu dropdown-menu-white">
                                <li><a class="dropdown-item nav-link text-dark fw-bold" asp-area=""  asp-page="/MyPages/laptops">Laptops</a></li>
                                <li><a class="dropdown-item nav-link text-dark fw-bold" asp-area=""  asp-page="/MyPages/Desktop">Desktop</a></li>
                                <li><a class="dropdown-item nav-link text-dark fw-bold" asp-area="" asp-page="/MyPages/Monitor">Monitors</a></li>
                                <li><a class="dropdown-item nav-link text-dark fw-bold" asp-area="" asp-page="/MyPages/Printer">Printer</a></li>

                            </ul>
                        </li> 
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-white bg-primary">
        <div class="container">
            &copy; 2023 - Labajo_WebApp - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>